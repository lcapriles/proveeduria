<table class="tope">
  <col width="385"/>
  <col width="70"/>
  <tr>
    <th> <%= ordenacion  "nombre", "Nombre Lista" %> </th>
    <th> <%= ordenacion "grado", "Grado" %> </th>
  </tr>
</table>

<table class="lista">
  <col width="385"/>
  <col width="70"/>
  <% @listas.each do |lista| %>
    <tr class="<%= cycle("Impar","Par") %>"
        onmouseover="document.getElementById('tabla-lista<%=  lista.id %>').className='con-botones';"
        onmouseout="document.getElementById('tabla-lista<%=  lista.id %>').className='sin-botones';">
      <td><%= lista.nombre %></td>
      <td><%= lista.grado %></td>
      <td class="sin-botones" id="tabla-lista<%= lista.id %>">
        <%= link_to image_tag("Select.gif", :mouseover => "Selectmo.gif", :border => 0), edit_lista_path(lista) %>
        <%= link_to image_tag("Delete.gif", :mouseover => "Deletemo.gif", :border => 0), lista,
          :confirm => 'Confirma la operacion?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= paginate @listas %>

