<%= form_for @articulo_lista, :html => {:multipart => true} do |f| %>
  <% if @articulo_lista.errors.any? %>
    <div id="ventana_errores">
      <h2>Se encontraron <%= pluralize(@articulo_lista.errors.count, "error") %></h2>
      <ul>
        <% @articulo_lista.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <table class="botonera" frame = "box" width = "560">
    <tr>
      <td>
        <%= image_submit_tag "OK.gif", :id => "BotonOK1" %>
        <%= link_to image_tag("Cancel.gif", :mouseover => "Cancelmo.gif", :border => 0), :controller => 'listas', :action => 'edit', :id => session[:lista_id] %>
      </td>
    </tr>
  </table>
  <%= render 'campos' %>
<% end %>

