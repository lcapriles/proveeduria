  <%= form_for(@articulo) do |f| %>
    <% if @articulo.errors.any? %>
      <div id="ventana_errores">
        <h2>Se encontraron <%= pluralize(@articulo.errors.count, "error") %></h2>

        <ul>
          <% @articulo.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <table class="botonera" frame = "box" width = "560">
      <tr>
        <td>
          <%= image_submit_tag "OK.gif", :id => "BotonOK1" %>
          <%= link_to image_tag("Cancel.gif", :mouseover => "Cancelmo.gif", :border => 0), articulos_path %>
        </td>
      </tr>
    </table>
  <%= render 'campos' %>
  <% end %>
