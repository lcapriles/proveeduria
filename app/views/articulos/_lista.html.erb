<table class="tope">
  <col width=200px></col>
  <col width=80px></col>
  <col width=300px></col>
  <col width=80px></col>
  <col width=120px></col>
  <col width=80px></col>
  <tr>
    <th> <%= ordenacion "nombre_generico", "Nombre" %> </th>
    <th> <%= ordenacion "tipo_articulo", "Tipo" %> </th>
    <th> <%= ordenacion "caracteristicas", "Caracteristicas" %> </th>
    <th> <%= ordenacion "unidad_medida", "Unidad" %> </th>
    <th> <%= ordenacion "precio_unitario", "Precio Actual" %> </th>
    <th> <%= ordenacion "existencias", "Existencias" %> </th>
  </tr>
</table>

<table class="lista">
  <col width=200px></col>
  <col width=80px></col>
  <col width=300px></col>
  <col width=80px></col>
  <col width=110px></col>
  <col width=80px></col>
  <col width=80px></col>
  <% @articulos.each do |articulo| %>
    <tr  class="<%= cycle("Impar","Par") %>"
         onmouseover="document.getElementById('tabla-lista<%=  articulo.id %>').className='con-botones';"
         onmouseout="document.getElementById('tabla-lista<%=  articulo.id %>').className='sin-botones';">
      <td><p STYLE="width:200px;"> <%= articulo.nombre_generico %> </p> </td>
      <td><p STYLE="width:80px;">  <%= articulo.tipo_articulo %> </p> </td>
      <td><p STYLE="width:300px;"> <%= articulo.caracteristicas %> </p></td>
      <td><p STYLE="width:80px;">  <%= articulo.unidad_medida %></p></td>
      <td><p STYLE="width:120px;">  <%= articulo.precio_unitario %></p></td>
      <td><p STYLE="width:80px;">  <%= articulo.existencias %></p></td>
      <td class="sin-botones" id="tabla-lista<%= articulo.id %>">
        <%= link_to image_tag("Select.gif", :mouseover => "Selectmo.gif", :border => 0), edit_articulo_path(articulo) %>
        <%= link_to image_tag("Delete.gif", :mouseover => "Deletemo.gif", :border => 0), articulo, :confirm => 'Confirma la operacion?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>
<br />
<%= paginate @articulos %>

