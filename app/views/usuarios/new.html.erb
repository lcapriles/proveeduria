<fieldset id="contenido" >
  <legend id="leyendaindex">
    Nuevo Usuario
  </legend>
  <%= form_for(@usuario) do |f| %>
    <% if @usuario.errors.any? %>
      <div id="ventana_errores">
        <h2>Se encontraron <%= pluralize(@usuario.errors.count, "error") %></h2>
        <ul> 
          <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <table class="botonera" frame = "box" width = "560">
      <tr>
        <td>
          <%= image_submit_tag "OK.gif", :id => "BotonOK1" %>
          <%= link_to image_tag("Cancel.gif", :mouseover => "Cancelmo.gif", :border => 0), usuarios_path %>
        </td>
      </tr>
    </table>
    <%= render :partial => "ficha" %>
  <% end %>

</fieldset>


