<table class="tope">
  <col width="335"/>
  <col width="335"/>
  <col width="245"/>
  <col width="150"/>
  <tr>
    <th> <%= ordenacion  "fecha_compra", "Fecha Compra" %> </th>
  </tr>
</table>

<table class="lista">
  <col width="335"/>
  <col width="335"/>
  <col width="245"/>
  <col width="150"/>
  <% @compras.each do |compra| %>
    <tr class="<%= cycle("Impar","Par") %>"
        onmouseover="document.getElementById('tabla-lista<%=  compra.id %>').className='con-botones';"
        onmouseout="document.getElementById('tabla-lista<%=  compra.id %>').className='sin-botones';">
      <td><%= compra.fecha_compra %></td>
      <td><%= compra.fecha_confirmacion %></td>
      <td><%= compra.visitante_id %></td>
      <td><%= compra.visitante.nombres %></td>
      <td class="sin-botones" id="tabla-lista<%= compra.id %>">
        <%= link_to image_tag("Select.gif", :mouseover => "Selectmo.gif", :border => 0), edit_compra_path(compra) %>
        <%= link_to image_tag("Delete.gif", :mouseover => "Deletemo.gif", :border => 0), compra,
          :confirm => 'Confirma la operacion?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= paginate @compras %>

